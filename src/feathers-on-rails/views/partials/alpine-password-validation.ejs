<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('passwordValidation', () => ({
      password: '',
      confirm: '',
      get validationError() {
        if (!this.password && !this.confirm) {
          return false
        }
        if (this.password !== this.confirm) {
          return 'Passwords do not match'
        }
        return false
      }
    }))
  })
</script>